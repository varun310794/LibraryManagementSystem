<% include partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Enter a New Book</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/books" method="Post">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Enter book name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="author" placeholder="Enter Author's name">
                </div>
                 <div class="form-group">
                    <input class="form-control" type="text" name="id" placeholder="Enter Book Id number">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/">Go Back</a>
        </div>
    </div>
</div>
<% include partials/footer %>
